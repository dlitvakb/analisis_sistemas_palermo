!!! 5
- load compile_static
%html{'lang':"en"}
  %head
    %title
      - block title
    %meta{'charset':"utf-8"}
    %meta{'content':"width=device-width, initial-scale=1.0", 'name':"viewport"}
    /! Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    - block stylesheets
      %link{'rel':"stylesheet", 'href':"/static/stylesheets/bootstrap.css"}
      %link{'rel':"stylesheet", 'href':"/static/stylesheets/bootswatch.css"}
      %link{'rel':"stylesheet", 'href':"/static/stylesheets/select2.min.css"}
      %link{'rel':"stylesheet", 'href':"/static/{% compile 'stylesheets/application.scss' %}"}
    - block extra_stylesheets
  %body
    %header
      .navbar.navbar-default.navbar-static-top
        .container
          .navbar-header.header
            %a.brand{'href':"/"}
              .logo-container
                %img{'src':"/static/img/logo.png"}
            - block header_content
    .container
      - block content

    %footer
      %hr
      .container
        %p Â© Analisis de Sistemas 2015
- block javascripts
  %script{'type':"text/javascript", 'src':"/static/javascript/jquery-1.11.3.js"}
  %script{'type':"text/javascript", 'src':"/static/javascript/bootstrap.js"}
  %script{'type':"text/javascript", 'src':"/static/javascript/select2.js"}
  %script{'type':"text/javascript", 'src':"/static/{% compile 'javascript/application.coffee' %}"}
- block extra_javascripts
